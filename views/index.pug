doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/styles/scripts/main.css')
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    
    meta(name="viewport", content="width=device-width, initial-scale=1")

    script(src='https://cdn.jsdelivr.net/npm/chart.js')
    script(src='/styles/scripts/main.js')
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  body
     header
      h1 
       i.fas.fa-globe  |  Simulador de Inversiones
      main
        form#investment-form
          .form-row
            .form-group
              label(for='investment-type') Tipo de Inversión
              select#investment-type(name='investmentType')
                option(value='acciones') Acciones
                option(value='bonos') Bonos
                option(value='bienes-raices') Bienes Raíces
                option(value='metales') Metales Preciosos
                option(value='bitcoin') Bitcoin
                option(value='Ethereum') Ethereum
                option(value='dogeCoin') DogeCoin
                option(value='criptomonedas') Criptomonedas
                option(value='rentaFija') Renta Fija
                option(value='rentaVariable') Renta Variable
                option(value='productosDerivados') Productos Derivados
            .form-group
              label(for='initial-amount') Monto Inicial
              input#initial-amount(type='number', name='initialAmount', placeholder='Monto Inicial')
            .form-group
              label(for='rate-percentage') Porcentaje de Rendimiento
              input#rate-percentage(type='number', name='ratePercentage', placeholder='Porcentaje (%)', min='0', step='0.01')
            .form-group
              label(for='inflation-percentage') Porcentaje de Inflacion
              input#inflation-percentage(type='number', name='inflationPercentage', placeholder='Porcentaje de Inflación (%)', min='0', step='0.01')
          .form-row
            .form-group
              label(for='monthly-contribution') Monto de la Aportación
              input#monthly-contribution(type='number', name='monthlyContribution', placeholder='Aportación')
            .form-group
              label(for='contribution-type') Tipo de Aportación
              select#contribution-type(name='contributionType')
                option(value='mensual') Mensual
                option(value='trimestral') Trimestral
                option(value='anual') Anual
            .form-group
              label(for='duration') Duración
              input#duration(type='number', name='duration', placeholder='Duración')
            .form-group
              label(for='duration-type') Tipo de Duración
              select#duration-type(name='durationType')
                option(value='meses') Meses
                option(value='anios') Años
                option(value='decadas') Décadas
          button#simulate-btn(type='button') Simular

        section#results
          h2 Resultados de la Simulación
          canvas#investment-chart(width='400', height='200')
          div.table-container
            table#results-table
              thead
                tr
                  th Tipo de Inversión
                  th Monto Inicial
                  th Aportaciones Totales
                  th Rendimiento Total
                  th Valor Final
                  th Tasa Anualizada TRA 
              tbody
      footer
        p © 2025 Simulador de Inversiones